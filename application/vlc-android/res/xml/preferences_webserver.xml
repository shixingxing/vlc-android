<?xml version="1.0" encoding="utf-8"?>

<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:key="audio_category"
        android:title="@string/web_server">
    <CheckBoxPreference
            android:defaultValue="false"
            android:key="enable_web_server"
            android:switchTextOff="Disabled"
            android:switchTextOn="Enabled"
            android:title="@string/enable_web_server"
            app:singleLineTitle="false" />
    <PreferenceScreen
            android:dependency="enable_web_server"
            android:key="web_server_status"
            android:summary="@string/web_server_status_summary"
            android:title="@string/web_server_status" />
    <CheckBoxPreference
            android:defaultValue="false"
            android:dependency="enable_web_server"
            android:key="web_server_auth"
            android:summary="@string/enable_web_server_auth_summary"
            android:title="@string/enable_web_server_auth" />
    <EditTextPreference
            android:defaultValue=""
            android:dependency="web_server_auth"
            android:inputType="text"
            android:key="web_server_user"
            android:singleLine="true"
            android:summary="%s"
            android:title="@string/web_server_user"
            app:useSimpleSummaryProvider="true" />
    <EditTextPreference
            android:dependency="web_server_auth"
            android:inputType="textPassword"
            android:key="web_server_password"
            android:title="@string/web_server_password" />
    <PreferenceCategory android:title="@string/web_server_content">
        <MultiSelectListPreference
                android:dependency="enable_web_server"
                app:defaultValue="@array/web_server_content_values"
                app:dialogTitle="@string/web_server_medialibrary_content"
                app:entries="@array/web_server_content_entries"
                app:entryValues="@array/web_server_content_values"
                app:key="web_server_medialibrary_content"
                app:title="@string/web_server_medialibrary_content" />
        <CheckBoxPreference
                android:defaultValue="false"
                android:dependency="enable_web_server"
                android:key="web_server_file_browser_content"
                android:title="@string/web_server_file_browser_content" />
        <CheckBoxPreference
                android:defaultValue="false"
                android:dependency="enable_web_server"
                android:key="web_server_network_browser_content"
                android:title="@string/web_server_network_browser_content" />

    </PreferenceCategory>
</androidx.preference.PreferenceScreen>
